= form_for @showcase_placement do |f|
  -if @showcase_placement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@showcase_placement.errors.count, "error")} prohibited this showcase_placement from being saved:"
      %ul
        - @showcase_placement.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :start_date
    = f.date_select :start_date
  .field
    = f.label :end_date
    = f.date_select :end_date
  .field
    = f.label :showcase
    = f.text_field :showcase
  .field
    = f.label :jewelry_item
    = f.text_field :jewelry_item
  .actions
    = f.submit 'Save'
