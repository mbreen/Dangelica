= form_for @stone do |f|
  -if @stone.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stone.errors.count, "error")} prohibited this stone from being saved:"
      %ul
        - @stone.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
