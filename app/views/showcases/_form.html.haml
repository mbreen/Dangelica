= form_for @showcase do |f|
  -if @showcase.errors.any?
    #error_explanation
      %h2= "#{pluralize(@showcase.errors.count, "error")} prohibited this showcase from being saved:"
      %ul
        - @showcase.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :num_positions
    = f.number_field :num_positions
  .field
    = f.label :location_description
    = f.text_field :location_description
  .field
    = f.label :diagram
    = f.file_field :diagram
  .actions
    = f.submit 'Save'
