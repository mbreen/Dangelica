= form_for @bead do |f|
  -if @bead.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bead.errors.count, "error")} prohibited this bead from being saved:"
      %ul
        - @bead.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
