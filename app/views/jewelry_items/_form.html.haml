= form_for @jewelry_item do |f|
  -if @jewelry_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@jewelry_item.errors.count, "error")} prohibited this jewelry_item from being saved:"
      %ul
        - @jewelry_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :size
    = f.number_field :size
  .field
    = f.label :earring_type
    = f.text_field :earring_type
  .field
    = f.label :jewelry_type
    = f.text_field :jewelry_type
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :string_type
    = f.text_field :string_type
  .field
    = f.label :clasp
    = f.text_field :clasp
  .actions
    = f.submit 'Save'
