= form_for @string_type do |f|
  -if @string_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@string_type.errors.count, "error")} prohibited this string_type from being saved:"
      %ul
        - @string_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
