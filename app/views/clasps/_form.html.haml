= form_for @clasp do |f|
  -if @clasp.errors.any?
    #error_explanation
      %h2= "#{pluralize(@clasp.errors.count, "error")} prohibited this clasp from being saved:"
      %ul
        - @clasp.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
